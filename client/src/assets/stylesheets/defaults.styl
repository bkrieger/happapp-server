@import 'nib'

@font-face
    font-family Avenir
    font-style normal
    src: url('/assets/fonts/Avenir-Medium.otf')

white = #F0F0F0
black = #303030
happPurple = #AA0470

textColor = white
mainColor = #AA0470
accentColor = #FF9F67
backgroundColor = #FFF7F5
secondaryColor = #C0C0C0
secondaryAccent = #233138
largeSize = 24px
mainSize = 16px
subSize = 12px

*
    box-sizing border-box

html, body
    height 100%
    width 100%
    background white

body
    color textColor
    font-family Avenir
    font-size mainSize
    margin 0px
    padding 0px
    text-rendering optimizeLegibility
    background-attachment fixed

p, ol, ul, td
    font-size mainSize
    margin 0px
    padding 0px

ul, ol
    list-style-type none

a
    cursor pointer
    color accentColor

label
    cursor pointer

::-webkit-input-placeholder
    font-weight normal
    font-family Avenir

input:-moz-placeholder
    font-weight normal
    font-family Avenir    

input[type=text]
    font-family Avenir
    width 280px
    height 40px
    padding 0px 10px
    font-size mainSize
    border none
    border-radius 5px
    border 1px solid rgba(0,0,0,0.5)
    // border-top 1px solid rgba(0,0,0,0.5)
    // border-bottom 1px solid rgba(0,0,0,0.3)

textarea
    font-family Avenir
    font-size mainSize
    resize none
